{
  "manifest_version": 3,
  "name": "SnipLi",
  "version": "1.0.0",
  "description": "Copy structured job posting data from LinkedIn as markdown.",
  "permissions": ["activeTab", "clipboardWrite", "tabs", "webNavigation"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/jobs/*"],
      "js": ["content.js"],
      "css": ["content/page.css"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "copy-job": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Copy job posting as markdown"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_title": "SnipLi - Copy job posting"
  }
}
